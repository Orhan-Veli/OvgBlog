@model ArticleUpdateViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-md-8">
    <div class="card">
        <div class="card-header card-header-primary">
            <h4 class="card-title">Update Article</h4>
        </div>
        <div class="card-body">
            <form method="post" enctype="multipart/form-data">
                <input asp-for="Id" hidden />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group bmd-form-group">
                            <label class="bmd-label-floating">Title</label>
                            <input type="text" asp-for="Title" class="form-control" required>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group bmd-form-group">
                            <label class="bmd-label-floating">Seo Url</label>
                            <input type="text" asp-for="SeoUrl" class="form-control" required>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group bmd-form-group">
                            <label class="bmd-label-floating">Image</label>
                            <input type="file" id="FileImageUrl" name="FileImageUrl" class="form-control" required>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <label for="Category">Choose a Category:</label>
                    <select id="SelectedCategoryId" name="SelectedCategoryId">
                        @foreach (var item in Model.CategoryList)
                        {
                            if (item.Id == Model.SelectedCategoryId)
                            {
                                <option value="@item.Id" selected="selected">@item.Name</option>
                            }
                            else
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        }
                    </select>
                </div>
                <div class="mb-3">
                    <label for="exampleFormControlTextarea1" class="form-label">Article Body</label>
                    <textarea class="form-control" id="summernote" asp-for="Body" rows="3">@Model.Body</textarea>
                </div>
                @*<div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">Article Body</label>
            <textarea class="form-control" asp-for="Body" rows="3">@Model.Body</textarea>
        </div>*@
                <button type="submit" class="btn btn-primary pull-right">Edit</button>
                <div class="clearfix"></div>
                <div asp-validation-summary="All" class="text-danger"></div>
            </form>
        </div>
    </div>
</div>
