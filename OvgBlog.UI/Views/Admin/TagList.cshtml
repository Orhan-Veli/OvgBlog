@model List<TagViewModel>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section styles {
  
}

    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-primary">
                <h4 class="card-title ">Tag Table</h4>                
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead class=" text-primary">                        
                        <th>
                            Name
                        </th>
                        <th>
                            SeoUrl
                        </th>
                        <th>
                            Delete
                        </th>                        
                        </thead>
                        <tbody>
                            @{
                                int i = 1;
                                foreach (var item in Model)
                                {
                                <tr id="row-@i">
                                    <td>
                                       @item.Name
                                    </td>
                                    <td>
                                        @item.SeoUrl
                                    </td>
                                    <td class="text-primary">
                                        <a href="javascript:;" onclick="DeleteTag('@item.Id', @i)" class="button-container" type="button"><img src="/uploads/Delete.png" width="20"></a>
                                    </td>
                                </tr>
                                    i++;
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" style="margin:10px; margin-right:110px">Category Ekle</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <p>Category Name</p><input type="text" class="form-control" name="Name" id="Name" />
                        <p>Seo Url</p><input type="text" class="form-control" name="SeoUrl" id="SeoUrl" />
                        <p>Image Url</p><input type="text" class="form-control" name="ImageUrl" id="ImageUrl" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
                    <button type="button" class="btn btn-default" data-save="modal">Kaydet</button>
                </div>
            </div>
        </div>
    </div>




@section scripts {
    <script type="text/javascript">
        function DeleteTag(id, rowNumber) {
            $.ajax({
                url: '@Url.Action("DeleteTag", "Admin")',
                method: 'DELETE',
                data: { id },
                success: function (result) {
                    if (result == null) {
                        toastr.error('İşlem gerçekleştirilirken hata oluştu.');
                        location.reload();
                    } else if (!result.success) {
                        toastr.error(result.message);
                        location.reload();
                    } else {
                        toastr.success(result.message);
                        $('#row-' + rowNumber).remove();
                        location.reload();
                        
                    }
                },
                error: function (ex) {
                    toastr.error('İşlem gerçekleştirilirken hata oluştu.');
                }
            });
        }
    </script>
}
