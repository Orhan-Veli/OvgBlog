@page
@model OvgBlog.UI.Pages.LoginModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>OVG-ADMIN</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/adminlib/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/adminlib/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/adminlib/fonts/iconic/css/material-design-iconic-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/adminlib/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/adminlib/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/adminlib/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/adminlib/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/adminlib/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/adminlib/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/adminlib/css/main.css">
    <!--===============================================================================================-->
</head>
<body>

    <div class="limiter">
        <div class="container-login100" style="background-image: url('/adminlib/images/bg-01.jpg');">
            <div class="wrap-login100">
                <form asp-page="Login" class="login100-form validate-form">
                    <span class="login100-form-logo">
                        <i class="zmdi zmdi-landscape"></i>
                    </span>

                    <span class="login100-form-title p-b-34 p-t-27">
                        Log in
                    </span>

                    <div class="wrap-input100 validate-input" data-validate="Enter username">
                        <input class="input100" type="text" asp-for="UserName" placeholder="Username">
                        <span class="focus-input100" data-placeholder="&#xf207;"></span>

                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Enter password">
                        <input class="input100" type="password" asp-for="Password" placeholder="Password">
                        <span class="focus-input100" data-placeholder="&#xf191;"></span>
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                  

                    <div class="container-login100-form-btn">
                        <button type="submit" class="login100-form-btn" value="Login" name="loginBtn">
                            Login
                        </button>
                    </div>

                    <div class="text-center p-t-90">
                        <a class="txt1" href="#">
                            Forgot Password?
                        </a>
                    </div>

                    @if (Model.Message != null && !string.IsNullOrEmpty(Model.Message))
                    {
                        <div class="text-center alert">
                            @Model.Message
                        </div>
                    }
                    <span asp-validation-for="UserName" class="text-danger"></span>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </form>
            </div>
        </div>
    </div>

    <div id="dropDownSelect1"></div>

    <!--===============================================================================================-->
    <script src="~/adminlib/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/adminlib/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/adminlib/vendor/bootstrap/js/popper.js"></script>
    <script src="~/adminlib/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/adminlib/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/adminlib/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/adminlib/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/adminlib/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/adminlib/js/main.js"></script>

</body>
</html>


